#!/bin/bash

set -e -u

source /var/vcap/jobs/riemann-health/helpers/ctl_utils.sh

RUN_DIR=/var/vcap/sys/run/riemann-health
LOG_DIR=/var/vcap/sys/log/riemann-health
PIDFILE=$RUN_DIR/riemann-health.pid

export LANG=en_US.UTF-8
export PATH=/var/vcap/packages/ruby-2.1/bin:$PATH
export BUNDLE_GEMFILE=/var/vcap/packages/riemann-health/Gemfile

case $1 in

  start)
    pid_guard $PIDFILE "riemann-health"

    mkdir -p $RUN_DIR
    chown vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    until nc -w 1 <%= p("riemann.host") %> <%= p("riemann.port") %> </dev/null; do
      echo "$(date): waiting for riemann server..."
      sleep 1
    done

    exec bundle exec riemann-health \
      --host <%= p("riemann.host") %> \
      --port <%= p("riemann.port") %> \
      --event-host <%= name %>-<%= index %> \
      >> $LOG_DIR/riemann-health.out.log \
      2>> $LOG_DIR/riemann-health.err.log
    ;;

  stop)
    kill_and_wait $PIDFILE
    ;;

  *)
    echo "Usage: riemann-health_ctl {start|stop}"
    ;;

esac
