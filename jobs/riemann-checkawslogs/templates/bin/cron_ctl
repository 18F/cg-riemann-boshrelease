#!/bin/bash

set -e # exit immediately if a simple command exits with a non-zero status
set -u # report the usage of uninitialized variables

# Setup env vars and folders for the webapp_ctl script
source /var/vcap/jobs/riemann-checkawslogs/helpers/ctl_utils.sh

RUN_DIR=/var/vcap/sys/run/riemann-checkawslogs
LOG_DIR=/var/vcap/sys/log/riemann/checkawslogs
PIDFILE=$RUN_DIR/riemann-checkawslogs.pid

case $1 in

  start)
    pid_guard $PIDFILE "riemann-checkawslogs"

    mkdir -p $RUN_DIR
    chown vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    cp /var/vcap/jobs/riemann-checkawslogs/config/riemann-checkawslogs /etc/cron.d/
    touch /etc/crontab # touch to help ensure cron reloads

    exec chpst -u vcap:vcap /var/vcap/jobs/riemann-checkawslogs/bin/sleeper \
         >>$LOG_DIR/riemann-checkawslogs.stdout.log \
         2>>$LOG_DIR/riemann-checkawslogs.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE
    rm /etc/cron.d/riemann-checkawslogs

    ;;
  *)
    echo "Usage: cron_ctl {start|stop}"

    ;;

esac
exit 0
