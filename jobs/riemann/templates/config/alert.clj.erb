(def alert
  "Send Alerts to teams"
  (
    where
    (
      and
      (or (state "warning") (state "critical"))
      (not (service #"bosh_test*"))
    )

    ( where (host #".*framefrog.*")   tell-framefrog )
    ( where (host #".*predictor.*")   tell-predictor )
    ( where (host #".*wombats.*")     tell-wombats )

    tell-idefix
  )
)
