(defn k8s-alerts [pd stable-time]
  (where (host "riemann-podstatus")
    (by :service
      (with :description "https://cloud.gov/docs/ops/runbook/troubleshooting-kubernetes"
        (stable stable-time :state
          (changed-state {:init "Running"}
            (where (state "Running")
              (:resolve pd)
            (else
              (:trigger pd)
            ))
          )
        )
      )
    )
  )
)
