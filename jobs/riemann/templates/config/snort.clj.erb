(info "Loading snort alerts")

(defn snort-alerts [pd]
  (info "Setting up snort alerts")

  (try
    (where
      (and (service "snort") (state "critical"))
        (with :description "https://cloud.gov/docs/ops/runbook/troubleshooting-snort"
          (:trigger pd)))
    (catch Exception e #(warn "snort-exception: " (.getMessage e))))
)
