(info "Loading monitor alerts")

(defn monitor-alerts [pd]
  (info "Setting up monitor alerts")

  <% metrics.each do |metric| %>
  (where (service "<%= metric["service"] %>")
    (where (or (expired? event) (> metric <%= metric["stddevs"] %>))
      (:trigger pd)
      (else (:resolve pd))))
  <% end %>
)
